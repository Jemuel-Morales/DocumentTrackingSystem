    <div class="vh-100 d-flex justify-content-center align-items-center bg-dark-subtle">
        <div class="card w-25 p-5 pb-10">
            <div class="mb-3 py-2">
                <h1>Login</h1>
            </div>
            <form novalidate asp-action="Login">
                <div class="mb-2">
                    <label asp-for="UsernameOrEmail" class="form-label">Username</label>
                    <input type="text" class="form-control is-invalid" asp-for="UsernameOrEmail" placeholder="Enter valid username" />
                    <span asp-validation-for="UsernameOrEmail" class="invalid-feedback"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control is-invalid" asp-for="Password" />
                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                </div>
                <div>
                    <button class="btn btn-lg btn-primary w-100" type="submit">Login</button>
                </div>
